{
	"compilerOptions": {
		"outDir": "dist",
		"types": ["node"],
		"composite": true,
		"noEmit": false,
		"declaration": true
	},
	"exclude": [
		"vitest.config.ts",
		"vite.config.mts",
		"vitest.config.ts",
