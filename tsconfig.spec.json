{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"strict": true,
		"types": ["vitest/globals", "vitest/importMeta", "node", "vitest"],
		"composite": true,
		"noEmit": false
	},
	"include": [
		"vitest.config.ts",
		"vite.config.mts",
		"vitest.config.ts",
		"vitest.config.mts",
		"src/**/*.test.ts",
		"src/**/*.spec.ts",
		"src/**/*.test.js",
		"src/**/*.spec.js",
		"src/**/*.d.ts",
		"src/**/*.js",
		"src/**/*.ts"
	],
	"exclude": ["node_modules", "dist"]
}
